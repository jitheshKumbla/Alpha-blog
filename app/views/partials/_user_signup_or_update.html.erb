<%= render 'shared/errors.html.erb', obj: @user %>
<div class="row">
	<div class="col-xs-12">
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |user| %>
			<div class="form-group">
				<div class="col-sm-2 control-label" >
					<%= user.label :username %>
				</div>
				<div class="col-sm-8">
					<%= user.text_field :username, class: "form-control", placeholder: "User name", autofocus: true%>
				</div>		
			</div>
			
			<div class="form-group">
				<div class="col-sm-2 control-label" >
					<%= user.label :email %>
				</div>
				<div class="col-sm-8">				
					<%= user.email_field :email, class: "form-control", placeholder: "Please enter your email", autofocus: true %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-2 control-label" >
					<%= user.label :password %>
				</div>
				<div class="col-sm-8">
					<%= user.password_field :password, class: "form-control", placeholder: "******", autofocus: true%>
				</div>		
			</div>

		  	<div class="form-group">
    			<div class="col-sm-offset-2 col-sm-10">
					<%= user.submit(@user.new_record? ? "Sign up" : "Update my details" ,class: "btn btn-primary btn-lg") %>
				</div>
			</div>
		<% end %>
    </div>
</div>