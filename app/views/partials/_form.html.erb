<%= render 'shared/errors.html.erb', obj: @article %>
<div class="row">
	<div class="col-xs-12">
		<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |article| %>
			<div class="form-group">
				<div class="col-sm-2 control-label" >
					<%= article.label :title %>
				</div>
				<div class="col-sm-8">
					<%= article.text_field :title, class: "form-control", placeholder: "Article title", autofocus: true%>
				</div>		
			</div>
			
			<div class="form-group">
				<div class="col-sm-2 control-label" >
					<%= article.label :description %>
				</div>
				<div class="col-sm-8">				
					<%= article.text_area :description,rows: 10, class: "form-control", placeholder: "Article description goes here", autofocus: true %>
				</div>
			</div>
		  	<div class="form-group">
    			<div class="col-sm-offset-2 col-sm-10">
					<%= article.submit class: "btn btn-primary btn-lg" %>
				</div>
			</div>
		<% end %>

		<div class="col-xs-4 col-xs-offset-4">
			<%= link_to "Back to articles listing page",  articles_path %>	
		</div>
    </div>
</div>