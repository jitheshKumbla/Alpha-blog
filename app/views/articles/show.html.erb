
<h2 align="center"> <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
	<ul class="listing">
		<div class="row center_align">
			<div class="col-md-4 col-md-offset-4">
				Created by:
				<li style="margin-top: 5px;">
					<%= link_to gravatar_for(@article.user),	user_path(@article.user) %>
				</li>
				<li class="article_title">
					<%= link_to @article.user.username, user_path(@article.user) %>
				</li>	
				<li>
					<small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles%></small>
				</li>
			</div>
		</div>
	</ul>
	<h4 class="center_align description_alignment"><strong>Description:</strong></h4>
	<hr>	
		<%= simple_format(@article.description) %> 
	</hr>
	<div class="article_actions">
		<%= link_to "Edit", edit_article_path(@article.id), class: "btn btn-xs btn-primary" %>
		<%= link_to "Delete this article", article_path(@article), method: :delete,
			 													   data: {confirm: "Are you sure, you want to delete this article?"}, 
																   class: "btn btn-xs btn-danger"%>
		<%= link_to "Back to listing",  articles_path, class: "btn btn-xs btn-success" %>
	</div>
</div>